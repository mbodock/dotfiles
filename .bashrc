#Funções

..() {
    local hops=$1
    local dest=""

    [ -z "$hops" ] && { cd .. ; return ; }

    [[ $hops =~ ^[0-9]+$ ]] || {
        echo "uso: .. [N]" >&2
        return 1
    }

    while [ $hops -gt 0 ] ; do
        dest="${dest}../"
        let 'hops--'
    done

    cd $dest
}

